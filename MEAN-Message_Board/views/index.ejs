


<html>
        <head>
            <title>Form</title>
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script type="text/javascript">
            
            </script>
        </head>
        <body>
            <div>
                <h1>Mean Message Board</h1>
           
            <form action="/message" method="post">

                <label for="name">Name:</label><br>            
                <input type="text" name="name"><br><br>  

                <label for="message">Message:</label><br>                
                <textarea cols="70" rows="5" name="message"></textarea><br><br>

                <input id="post" type="submit" value="Post message">
            </form> 
            </div>
             <% if(typeof(errors) != 'undefined' ) { %>
                 <% for (var x in errors) { %>
                  <h3><%= errors[x].message %></h3>
                 <% } %>
              <% } else { %>
               
                   <div>
                    <% for(var i in messages) { %><fieldset>
                        
                        <h2><%= messages[i].name + " Says:"%> </h2>
                        <h2>"<%= messages[i].message %>"</h2><br><br>
                           
                            <% for (var y = 0; y < messages[i]._comments.length; y++) { %> 
                                <h3><%=messages[i]._comments[y].name + " replied: " %></h3>
                                <h4>"<%=messages[i]._comments[y].text %>"</h4>
                                <hr>
                            <% } %>

                        <form action=<%="/comment/" + messages[i]._id %> method="post">
                            <label for="name">Name:</label><br>
                            <input class="comment_input" type="text" name="name"><br><br>
                           
                            <label for="comment">Comment:</label><br>                            
                            <textarea cols="70" rows="5" name="comment"></textarea><br><br>
                            <input class="post2" type="submit" value="Post comment">
                        </form></fieldset><br><br><br><br>
                    
                        
                    <% } %>
                
             <% } %>
        </div>
        </body>
        </html>

