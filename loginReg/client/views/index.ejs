<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Registration</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <% if (typeof(error) != 'undefined') { %>
      <p class="rederror"><%= error %></p>
    <% } else if (typeof(errors) != 'undefined') { %>
      <% for (let x in errors.errors) { %>
        <p class="rederror"><%= errors.errors[x] %></p>
      <% } %>
    <% } %>
    <form class="" action="/register" method="post">
      First Name: <input type="text" name="fname" value=""><br>
      Last Name: <input type="text" name="lname" value=""><br>
      Email: <input type="email" name="email" value=""><br>
      Birthday: <input type="date" name="bday" value=""><br>
      Password: <input type="password" name="password" value=""><br>
      Confirm Password: <input type="password" name="confirm" value=""><br>
      <input type="submit" value="Register">
    </form>
    <br>
    <a href="/login">Already Registered? Log in here.</a>
  </body>
</html>
